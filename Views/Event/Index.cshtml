@model IEnumerable<EventManagementAPI.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Create New Event
    </a>
</div>

<!-- Search and Filter Form -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Title/Description</label>
                <input type="text" name="searchQuery" class="form-control" placeholder="Search by title or description..." value="@ViewBag.SearchQuery">
            </div>
            <div class="col-md-3">
                <label class="form-label">Location</label>
                <input type="text" name="location" class="form-control" placeholder="Search by location..." value="@ViewBag.Location">
            </div>
            <div class="col-md-2">
                <label class="form-label">From</label>
                <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate">
            </div>
            <div class="col-md-2">
                <label class="form-label">To</label>
                <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate">
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="status" class="form-select" asp-items="Html.GetEnumSelectList<EventStatus>()">
                    <option value="">All Statuses</option>
                </select>
            </div>
            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search me-2"></i>Search
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-2"></i>Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Events Display -->
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header d-flex justify-content-between">
                    <h5 class="card-title mb-0">@item.Title</h5>
                    <span class="badge @GetStatusBadgeClass(item.Status)">@item.Status</span>
                </div>
                <div class="card-body">
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-geo-alt me-2"></i>
                        <span>@item.Location</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-calendar-event me-2"></i>
                        <span>@item.Date.ToString("MMM dd, yyyy - HH:mm")</span>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-info-circle me-1"></i>Details
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <i class="bi bi-calendar-x me-2"></i>No events found. Create a new event to get started!
    </div>
}

@functions {
    public string GetStatusBadgeClass(EventStatus status)
    {
        return status switch
        {
            EventStatus.Upcoming => "bg-warning",
            EventStatus.Attending => "bg-success",
            EventStatus.Maybe => "bg-info",
            EventStatus.Declined => "bg-danger",
            _ => "bg-secondary"
        };
    }
}