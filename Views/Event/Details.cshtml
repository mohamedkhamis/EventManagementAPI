@model EventManagementAPI.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0 fs-4">@Model.Title</h2>
                    <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="card-title">Description</h5>
                        <p class="card-text">@Model.Description</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-geo-alt-fill me-2 text-primary"></i>
                                <div>
                                    <h6 class="mb-0">Location</h6>
                                    <p class="mb-0">@Model.Location</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-event-fill me-2 text-primary"></i>
                                <div>
                                    <h6 class="mb-0">Date & Time</h6>
                                    <p class="mb-0">@Model.Date.ToString("MMMM dd, yyyy - HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="bi bi-trash me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(EventStatus status)
    {
        return status switch
        {
            EventStatus.Upcoming => "bg-warning",
            EventStatus.Attending => "bg-success",
            EventStatus.Maybe => "bg-info",
            EventStatus.Declined => "bg-danger",
            _ => "bg-secondary"
        };
    }
}